<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFFFFF"
    tools:context=".Main2Activity">

    <TextView
        android:id="@+id/tema"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Join a Norwegian Club!"
        android:textAlignment="center"
        android:textStyle="bold"
        android:textSize="25dp"
        android:layout_marginTop="10dp"
        />

    <TextView
        android:id="@+id/subtema"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Practice chatting in Norwegian with other leamers"
        android:textAlignment="center"
        android:textSize="20dp"
        android:layout_below="@id/tema"
        />

    <ImageView
        android:id="@+id/amarilla"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/a1"
        android:layout_below="@id/tema"
        android:layout_marginTop="230dp"
        android:layout_marginLeft="80dp"
        />

    <ImageView
        android:id="@+id/verde"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/a2"
        android:layout_below="@id/salmon"
        android:layout_toRightOf="@+id/amarilla"
        android:layout_marginTop="25dp"
        />

    <ImageView
        android:id="@+id/morada"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/a3"
        android:layout_below="@id/tema"
        android:layout_toRightOf="@+id/salmon"
        android:layout_marginTop="240dp"
        />

    <ImageView
        android:id="@+id/salmon"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/a4"
        android:layout_below="@id/tema"
        android:layout_toRightOf="@+id/amarilla"
        android:layout_marginTop="100dp"
        />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="23dp"
        android:layout_marginTop="430dp"
        android:paddingHorizontal="130dp"
        android:text="Find me a club"
        android:textColor="#AD006FAA"
        android:textStyle="bold"
        />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="23dp"
        android:layout_marginTop="480dp"
        android:ems="10"
        android:text="Create"
        android:textColor="#AD006FAA"
        />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_marginTop="480dp"
        android:layout_marginEnd="27dp"
        android:layout_marginRight="313dp"
        android:ems="10"
        android:text="Club code"
        android:textColor="#AD006FAA"
        />

    <ImageView
        android:id="@+id/b1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="0dp"
        android:src="@drawable/b1"
        />

    <ImageView
        android:id="@+id/b2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="0dp"
        android:src="@drawable/b2"
        android:layout_toRightOf="@+id/b1"
        />

    <ImageView
        android:id="@+id/b3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="0dp"
        android:src="@drawable/b3"
        android:layout_toRightOf="@+id/b2"
        />

    <ImageView
        android:id="@+id/b4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="0dp"
        android:src="@drawable/b4"
        android:layout_toRightOf="@id/b3"
        />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="0dp"
        android:src="@drawable/b5"
        android:layout_toRightOf="@id/b4"
        />

</RelativeLayout>